<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="csci3310gp10.cusocmanager.LoginFragment">

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="158dp"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="@string/login_button_label"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="21dp"
        android:text="@string/login_label_username"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:layout_above="@+id/passwordEditText"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginButton"
        android:layout_alignStart="@+id/usernameTextView"
        android:layout_marginBottom="93dp"
        android:text="@string/login_label_password"
        android:textAlignment="textEnd"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/usernameTextView"
        android:layout_alignBottom="@+id/usernameTextView"
        android:layout_alignStart="@+id/passwordEditText"
        android:ems="10"
        android:hint="@string/login_hint_username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/passwordTextView"
        android:layout_alignBottom="@+id/passwordTextView"
        android:layout_alignStart="@+id/loginButton"
        android:ems="10"
        android:hint="@string/login_hint_password"
        android:inputType="textPassword" />

</RelativeLayout>
